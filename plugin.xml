      <source-file src="src/ios/SocketIO/SwiftRegex.swift" target-dir="SocketIO" />
      <source-file src="src/ios/SocketIO/WebSocket.swift" target-dir="SocketIO" />

      <source-file src="src/ios/libjingle_peerconnection/libWebRTC.a" framework="true" />

      <header-file src="src/ios/libjingle_peerconnection/Headers/RTCAudioSource.h" />
      <header-file src="src/ios/libjingle_peerconnection/Headers/RTCAudioTrack.h" />
