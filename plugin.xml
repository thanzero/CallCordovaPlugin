      <source-file src="src/ios/SocketIO/WebSocket.swift" target-dir="SocketIO" />

      <source-file src="src/ios/Haneke/Cache.swift" target-dir="Haneke" />
      <source-file src="src/ios/Haneke/CGSize+Swift.swift" target-dir="Haneke" />
      <source-file src="src/ios/Haneke/CryptoSwiftMD5.swift" target-dir="Haneke" />
